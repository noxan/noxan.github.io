.ngdialog-theme-noxan
  padding-bottom 160px
  padding-top 160px

  .ngdialog-content
    width 80%
    max-width 700px
    position relative
    margin 0 auto
    padding 1.51515%

  .ngdialog-close
    border-radius 5px
    cursor pointer
    position absolute
    right 0
    top 0

    &:before
      background transparent
      border-radius 3px
      color #bbb
      content '\00D7'
      font-size 26px
      font-weight 400
      height 30px
      line-height 26px
      position absolute
      right 3px
      text-align center
      top 3px
      width 30px

    &:hover
    &:active
      &:before
        color #777
